root = true

[*]
charset = utf-8
end_of_line = lf

[*.md]
trim_trailing_whitespace = true
insert_final_newline = true

[*rc]
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,json}]
indent_size = 2
indent_style = space
max_line_length = 240
trim_trailing_whitespace = true
insert_final_newline = true

[*.{scss,css}]
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true
