{
  "name": "redux-replica",
  "version": "1.1.1",
  "main": "lib-esm/index.min.js",
  "typings": "lib-esm/index.d.ts",
  "jsnext:main": "lib-esm/index.js",
  "module": "lib-esm/index.js",
  "description": "Using redux in electron and chrome extensions",
  "repository": "https://github.com/VadimKorobka/redux-replica",
  "author": "Vadim Korobka",
  "keywords": [
    "electron",
    "chrome",
    "extension",
    "redux",
    "react",
    "desktop"
  ],
  "license": "MIT",
  "files": [
    "lib/**/*",
    "lib-esm/**/*",
    "src/**/*"
  ],
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "test": "jest --silent",
    "coverage": "jest --coverage --silent",
    "webpack": "cross-env TS_NODE_PROJECT=\"tsconfig.webpack.json\" webpack",
    "dev": "cross-env NODE_ENV=development BUILD_STAGE=local yarn webpack",
    "clean": "rimraf ./lib-esm/ ./lib/",
    "build": "yarn clean && run-p build:*",
    "build:commonjs": "yarn webpack",
    "build:esm": "ttsc --outDir lib-esm && yarn generate-types",
    "generate-types": "npx dts-bundle --name redux-replica --main ./lib-esm/index.d.ts --out ../lib/index.d.ts --referenceExternals",
    "version-patch": "npm version patch -m \"Bump version to %s\"",
    "version-prerelease": "npm version prerelease -m \"Bump prerelease version to %s\"",
    "version-minor": "npm version minor -m \"Bump minor version to %s\"",
    "preversion": "yarn build",
    "postversion": "run-s create-changelog publish-package",
    "publish-package": "npm publish",
    "create-changelog": "auto-changelog -p && git add -A && git commit -am \"Update Changelog\" && git push && git push --tags"
  },
  "dependencies": {
    "lodash-es": "^4.17.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.10.1",
    "@types/chrome": "^0.0.114",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^14.0.5",
    "@types/webpack": "^4.41.13",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "auto-changelog": "^1.16.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "dts-bundle": "^0.7.3",
    "electron": "^9.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "husky": "^4.2.3",
    "jest": "^26.0.1",
    "lint-staged": "^10.0.10",
    "lodash-webpack-plugin": "^0.11.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "redux": "^4.0.5",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.0.0",
    "terser-webpack-plugin": "^3.0.2",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.3",
    "typescript-transform-paths": "^1.1.14",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.11"
  }
}
